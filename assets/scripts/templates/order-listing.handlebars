  <table class="table table-striped table-bordered table-condensed table-hover">
     <thead>
       <tr>
           <th>Order</th>
           <th>Date</th>
           <th>Details</th>
           <th>Status</th>
           <th class="text-right">Price</th>
       </tr>
     </thead>
     <tbody>
       {{#each orders}}
       <tr class='clickable-row' style="cursor: pointer" data-id="{{ this.id }}">
           <td>{{ this.id }}</td>
           <td>{{ this.date }}</td>
           <td>{{ this.description }}</td>
           <td>{{ this.status }}</td>
           <td class="text-right">{{ this.price }}</td>
       </tr>
       {{/each}}
     </tbody>
  </table>
